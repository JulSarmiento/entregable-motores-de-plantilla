doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(rel='stylesheet' href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
    title Document

    link(rel="stylesheet", href="styles.css")

    body
      div(class="container text-center")

        div(class="row")
          div(class="col")
            h1 Registro de productos
            a(href='/products/seeProducts') Ver Productos
        div(class="row")

        div(class="row")
          form(method='POST' action='/products' class="form-styles")
            div(class="mb-3")
              label(class="form-label" for='productName') Nombre del producto
              input(class="form-control" id="productName" type='text' name='productName' aria-describedby='emailHelp' required)
            div(class="mb-3")
              label(class="form-label" for='productPrice') Precio del producto
              input(class="form-control" id="productPrice" type='number' name='productPrice' aria-describedby='emailHelp' required)
            div(class="mb-3")
              label(class="form-label" for='thumbnail') Foto del producto
              input(class="form-control" id="thumbnail" type='text' name='thumbnail' aria-describedby='emailHelp' required)
            button(class="btn btn-primary mb-3" type='submit') Agregar Producto    
           
    script(src='//cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3' crossorigin='anonymous')



  