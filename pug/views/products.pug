doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='https://getbootstrap.com/docs/4.4/dist/css/bootstrap.min.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    title Document

    style
      .table-config
        margin: 30px auto;
      
      .title-config
        margin: 20px auto;
      
  body(class="container text-center")

    div(class="container text-center title-config")
      h1 Lista de Productos

    div(class="container.table-config.text-center")
      div(class="row")
        div(class="col")

          if products.length > 0
            table(class="table table-hover table-dark")
              thead
                tr
                  th ID
                  th Nombre
                  th Precio
                  th Foto

              tbody
                each product in products
                  tr
                    th=product.id
                    td=product.productName
                    td=new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD'}).format(product.productPrice) 
                    td 
                      img( src=product.thumbnail height="40" width="40" alt="")

          else
            h3(class="alert alert-warning") No se encontraron productos

    a(href="/products") Agregar mas productos

  script(src='//cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3' crossorigin='anonymous')
